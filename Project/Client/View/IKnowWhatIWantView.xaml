<UserControl x:Class="Project.Client.View.IKnowWhatIWantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Client.View"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" 
            Height="400" Width="500"
             >

    <UserControl.Resources>
        <Style TargetType="{x:Type CheckBox}">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TextBlock FontWeight="Bold" Margin="120,60,89,10" Width="228"> I Know What I Want</TextBlock>
        <mui:ModernFrame Height="300" Width="400">
            <StackPanel>
                
                <CheckBox Margin="71,40,71,10">Song</CheckBox>
                <CheckBox Margin="71,20,71,10">Artist</CheckBox>
                <CheckBox Margin="71,20,71,30">Place</CheckBox>
            </StackPanel>
        </mui:ModernFrame>

    </Grid>
</UserControl>
