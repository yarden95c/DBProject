<UserControl x:Class="Project.Client.View.GetParamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Client.View"
             mc:Ignorable="d" 

             Height="70" Width="400">
    <Border>
        <Grid Width="400" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="229*"/>
                <ColumnDefinition Width="171*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding NameOfParam}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="28,23,0,23"/>
            <!--TextBox Text="{Binding GivvenParam}"  Height="25" Width="170" HorizontalAlignment="Right" Margin="0,22,116,23" Grid.ColumnSpan="2"/-->
                <ComboBox IsEnabled="{Binding IsNotWaitingForResponse}"
								IsEditable="True" VerticalAlignment="Center" ItemsSource="{Binding ParamOptions}" 
                                               Text="{Binding GivvenParam, Mode=TwoWay, UpdateSourceTrigger=Default}" Grid.Column="2">
                </ComboBox>

        </Grid>
    </Border>

</UserControl>
